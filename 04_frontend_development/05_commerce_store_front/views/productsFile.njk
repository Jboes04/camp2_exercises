{% extends "layout.njk" %}

{% block content %}
<div class="container">
  <div class = "row">
  {% for productName in products %}
  <div class="card col-4">
    <img class="img-thumbnail" src="https://decathlon.fr/media/{{productName.image_path}}">
    <div class="card-body">
        <p class="card-text"><a href="/category/products/{{productName.id}}">{{productName.title}}</a></p>
      </div>
    </div>
  {% endfor %}
  </div>
</div>
{% endblock %}
